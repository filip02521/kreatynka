---
const { title = "Kreatynka – zestawy DIY" } = Astro.props;
---
<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="Kreatynka – sklep z zestawami DIY idealnymi na prezent i dla kreatywnych osób. Bransoletki makramowe, świece sojowe, makramy i więcej. Zainspiruj się!" />
    <link rel="icon" href="/favicon.ico" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/snipcart-custom.css">
    <link rel="stylesheet" href="/global.css">
    <script defer src="https://cdn.snipcart.com/themes/v3.6.0/default/snipcart.js"></script>
    <link rel="stylesheet" href="https://cdn.snipcart.com/themes/v3.6.0/default/snipcart.css" />
    <meta name="theme-color" content="#eebbc3" />
  </head>
  <body class="bg-[#f4f6fb] text-[#232946] font-nunito min-h-screen flex flex-col">
    <header class="w-full bg-white shadow-lg z-20 sticky top-0">
      <div class="max-w-7xl mx-auto flex items-center justify-between px-4 py-3">
        <a href="/" class="flex items-center gap-3">
          <img src="/logo.svg" alt="Kreatynka – logo" class="h-8 w-8" />
          <span class="font-bold text-xl tracking-tight text-[#232946]">Kreatynka</span>
        </a>
        <!-- Desktop nav -->
        <nav class="hidden md:flex gap-7 items-center font-semibold">
          <a href="/" class="hover:text-[#eebbc3] transition">Strona główna</a>
          <a href="/o-nas" class="hover:text-[#eebbc3] transition">O nas</a>
          <a href="/kontakt" class="hover:text-[#eebbc3] transition">Kontakt</a>
          <a href="/polityka-prywatnosci" class="hover:text-[#eebbc3] transition">Polityka prywatności</a>
          <button class="snipcart-checkout relative">
            <svg width="28" height="28" fill="none" viewBox="0 0 24 24" class="inline"><path d="M6 6h15l-1.68 8.38a2 2 0 0 1-2 1.62H8.09a2 2 0 0 1-2-1.62L3 3H1" stroke="#232946" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
            <span class="snipcart-items-count absolute -top-2 -right-3 bg-[#eebbc3] text-[#232946] font-bold rounded-full w-5 h-5 flex items-center justify-center text-xs"></span>
          </button>
        </nav>
        <!-- Mobile hamburger -->
        <button id="burger-btn" class="md:hidden text-3xl text-[#232946] p-2 rounded hover:bg-[#eebbc3] focus:outline-none" aria-label="Otwórz menu">
          &#9776;
        </button>
      </div>
      <!-- Mobile menu -->
      <div id="mobile-menu" class="fixed top-0 right-0 bg-white shadow-2xl z-50 h-full w-72 p-8 flex-col gap-6 hidden animate__animated animate__fadeInRight">
        <button id="close-menu" class="text-3xl text-[#eebbc3] p-2 rounded absolute top-4 right-4 hover:bg-[#232946] hover:text-white" aria-label="Zamknij menu">&times;</button>
        <a href="/" class="block text-lg mb-4 text-[#232946] hover:text-[#eebbc3]">Strona główna</a>
        <a href="/o-nas" class="block text-lg mb-4 text-[#232946] hover:text-[#eebbc3]">O nas</a>
        <a href="/kontakt" class="block text-lg mb-4 text-[#232946] hover:text-[#eebbc3]">Kontakt</a>
        <a href="/polityka-prywatnosci" class="block text-lg mb-4 text-[#232946] hover:text-[#eebbc3]">Polityka prywatności</a>
        <button class="snipcart-checkout relative mt-4 bg-[#eebbc3] text-[#232946] py-2 px-4 rounded-xl font-semibold shadow hover:bg-[#232946] hover:text-[#eebbc3] transition">
          <svg width="26" height="26" fill="none" viewBox="0 0 24 24" class="inline align-middle mr-1"><path d="M6 6h15l-1.68 8.38a2 2 0 0 1-2 1.62H8.09a2 2 0 0 1-2-1.62L3 3H1" stroke="#232946" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
          Koszyk (<span class="snipcart-items-count"></span>)
        </button>
      </div>
      <script>
        const burger = document.getElementById("burger-btn");
        const mobileMenu = document.getElementById("mobile-menu");
        const closeBtn = document.getElementById("close-menu");
        burger?.addEventListener("click", () => mobileMenu.classList.remove("hidden"));
        closeBtn?.addEventListener("click", () => mobileMenu.classList.add("hidden"));
        // Zamknij na klik poza menu
        window.addEventListener("click", (e) => {
          if (!mobileMenu.classList.contains("hidden") && !mobileMenu.contains(e.target) && e.target !== burger) {
            mobileMenu.classList.add("hidden");
          }
        });
      </script>
    </header>

    <main class="flex-1">
      <slot />
    </main>
    
    <footer class="bg-white border-t py-6 mt-10 text-center text-sm text-[#232946]">
      &copy; {new Date().getFullYear()} Kreatynka – Wszystkie prawa zastrzeżone
    </footer>
    <!-- Snipcart -->
    <div hidden id="snipcart" data-api-key="M2JlYTYxOWYtY2I4ZS00MzE3LWI4MjMtNjE1YzEzYmM4Y2ZlNjM4ODM2MTM4NDA0MjY4NzM0"></div>
  </body>
</html>
